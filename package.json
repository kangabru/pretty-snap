{
    "version": "1.0.0",
    "name": "pretty-snap",
    "description": "Make boring screenshots look awesome with a pretty background.",
    "repository": "https://github.com/kangabru/pretty-snap",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "preinstall": "npx npm-force-resolutions",
        "start": "npm run dev",
        "dev": "npm run typecheck && npm run parcel:watch",
        "build": "npm run typecheck && npm run parcel:build && npm run static-assets",
        "parcel:watch": "parcel ./src/index.html",
        "parcel:build": "parcel build ./src/index.html --no-source-maps",
        "static-assets": "node copy.js",
        "typecheck": "tsc --noEmit && eslint . --ext .ts,.tsx"
    },
    "alias": {
        "react": "preact/compat",
        "react-dom": "preact/compat"
    },
    "browserslist": [
        "last 2 chrome versions",
        "last 2 firefox versions"
    ],
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^3.0.0",
        "@types/dom-to-image": "^2.6.2",
        "@types/react": "^16.9.55",
        "@typescript-eslint/eslint-plugin": "^4.14.2",
        "@typescript-eslint/parser": "^4.14.2",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.19.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "fs-extra": "^9.0.1",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-bundle-visualiser": "^1.2.0",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "dom-to-image": "^2.6.0",
        "history": "^5.0.0",
        "preact": "^10.5.12",
        "preact-router": "^3.2.1",
        "react-merge-refs": "^1.1.0",
        "react-spring": "^8.0.27",
        "react-use-measure": "^2.0.2",
        "zustand": "^3.1.3"
    },
    "resolutions": {
        "node-forge": "0.10.0",
        "yargs-parser": "20.2.4"
    }
}
